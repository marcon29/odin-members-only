<%= form_with model: user do |f| %>
    <%= f.text_field :first_name, placeholder: (@user.errors[:first_name].first || "Enter a first name") %>
    <%= f.text_field :last_name, placeholder: (@user.errors[:last_name].first || "Enter a last name") %>
    <%= f.text_field :username, placeholder: (@user.errors[:username].first || "Enter a username") %>
    <%= f.text_field :email, placeholder: (@user.errors[:email].first || "Enter your email") %>
    <%= f.password_field :password_digest, placeholder: (@user.errors[:password].first || "Create a password") %>
    <%= f.submit %>
<% end %>