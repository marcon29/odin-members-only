<section id="feed-form">
    <%= form_with model: post do |f| %>
        <section class="feed-post-form">
            <% if logged_in? %>
                <%= tag.p "#{user.first_name} #{user.last_name}", class: "post-user-form" %>
            <% else %>
                <%= tag.p "Mysterious Stranger", class: "post-user-form" %>
            <% end %>
            <%= f.hidden_field :user_id, value: user.id %>
            <%= f.text_field :body, class: "post-content-form" %>
            <%= f.submit %>
        </section>
    <% end %>
</section>
<hr>

